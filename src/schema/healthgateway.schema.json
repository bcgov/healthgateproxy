{
    "id": "healthgateway/healthgateway.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "version": "1.0.0",
    "definitions": { 
    	"DateType":{
	      "type":"string",
	      "pattern":"^[12][0-9]{3}-[01][0-9]-[0-9]{2}$"
	    },
    	"PHNType":{
	      	"type":"string",
	        "minLength": 9,
	        "maxLength": 9,
	      	"pattern": "^[0-9]{9}$"
    	},
		"PageSizeType":{
			"type": "integer",
			"minimum": 1
		},
        "GetMedicationHistoryRequestType": { 
	        "type": "object", 
	        "properties": {
	            "startDate": { 
	            	"$ref":"#/definitions/DateType"
	            },
	            "endDate": { 
	            	"$ref":"#/definitions/DateType"
	            },
	            "phn": { 
	            	"$ref":"#/definitions/PHNType"
	            },
	            "pageSize": { 
	            	"$ref":"#/definitions/PHNType"
	            }
			},
            "required": [
                "phn",
                "pageSize"
            ]
		},
        "GetMedicationHistoryResponseType": { 
	        "type": "object", 
	        "properties": {
	            "startDate": { 
	            	"$ref":"#/definitions/DateType"
	            },
	            "endDate": { 
	            	"$ref":"#/definitions/DateType"
	            },
	            "phn": { 
	            	"$ref":"#/definitions/PHNType"
	            },
	            "pageSize": { 
	            	"$ref":"#/definitions/PHNType"
	            }
			},
            "required": [
                "phn",
                "pageSize"
            ]
		}
    },
    "title": "HealthGateway",
    "type": "object",
    "properties": {
        "getMedicationHistoryRequest": {
            "$ref": "#/definitions/GetMedicationHistoryRequestType"
        },
        "getMedicationHistoryResponse": {
            "$ref": "#/definitions/GetMedicationHistoryResponseType"
        }
    }
}
