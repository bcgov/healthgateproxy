{
    "id": "healthgateway/healthgateway.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "version": "1.0.0",
    "definitions": {
      "DateType": {
        "type": "string",
        "pattern": "^[12][0-9]{3}-[01][0-9]-[0-3][0-9]$"
      },
      "PhnType": {
        "type": "string",
        "minLength": 9,
        "maxLength": 9,
        "pattern": "^[0-9]{9}$"
      },
      "PageSizeType": {
        "type": "integer"
      },
      "PageNumberType": {
        "type": "integer"
      },
      "OrderByType": {
        "type": "string",
        "enum": [
          "asc",
          "desc"
        ]
      },
      "NameType": {
        "id": "#name",
        "type": "object",
        "properties": {
          "firstName": {
            "type": "string"
          },
          "middleInit": {
            "type": "string"
          },
          "LastName": {
            "type": "string"
          }
        }
      },
      "AddressLineType": {
        "type": "string",
        "maxLength": 25
      },
      "AddressType": {
        "id": "#address",
        "type": "object",
        "properties": {
          "addrLine1": {
            "$ref": "#/definitions/AddressLineType"
          },
          "addrLine2": {
            "$ref": "#/definitions/AddressLineType"
          },
          "city": {
            "type": "string",
            "maxLength": 25
          },
          "province": {
            "type": "string",
            "maxLength": 2
          },
          "country": {
            "type": "string",
            "maxLength": 3
          },
          "postalCode": {
            "type": "string",
            "maxLength": 25
          }
        }
      },
      "MedicationRecordsType": {
        "id": "#medicationRecords",
        "type": "array",
        "record": {
          "depenseId": {
            "type": "string"
          },
          "$comment": "Date the prescription was dispensed",
          "dateDispensed": {
            "$ref": "#/definitions/DateType"
          },
          "rxNumber": {
            "type": "string"
          },
          "genericName": {
            "type": "string"
          },
          "practitioner": {
            "$ref": "#name"
          },
          "quantity": {
            "type": "string"
          },
          "refills": {
            "type": "string"
          },
          "dinpin": {
            "type": "string"
          },
          "dispensingPharmacy": {
            "pharmacyId": {
              "type": "string"
            },
            "name": {
              "type": "string"
            },
            "siteAddress": {
              "$ref": "#address"
            },
            "phoneNumber": {
              "type": "string"
            },
            "faxNumber": {
              "type": "string"
            }
          },
          "directions": {
            "type": "string"
          },
          "rxStatus": {
            "type": "string",
            "enum": [
              "filled",
              "discontinued"
            ]
          }
        }
      }
    },
    "title": "HealthGateway",
    "type": "object",
    "properties": {
      "getMedicationHistoryRequest": {
        "type": "object",
        "properties": {
          "uuid": {
            "type": "string"
          },
          "startDate": {
            "$ref": "#/definitions/DateType"
          },
          "endDate": {
            "$ref": "#/definitions/DateType"
          },
          "phn": {
            "$ref": "#/definitions/PhnType"
          },
          "pageSize": {
            "$ref": "#/definitions/PageSizeType",
            "default": 25
          },
          "pageNumber": {
            "$ref": "#/definitions/PageNumberType",
            "default": 1
          },
          "order": {
            "$ref": "#/definitions/OrderByType",
            "default": "desc"
          }
        },
        "required": [
          "uuid",
          "phn"
        ]
      },
      "getMedicationHistoryResponse": {
        "type": "object",
        "properties": {
          "uuid": {
            "type": "string"
          },
          "medicationResultSet": {
            "type": "array",
            "pages": {
              "records": {
                "$ref": "#medicationRecords"
              },
              "totalrecords": {
                "type": "integer"
              },
              "pageNumber": {
                "$ref": "#/definitions/PageNumberType"
              }
            }
          },
          "numberOfPages": {
            "type": "integer"
          }
        },
        "required": [
          "uuid"
        ]
      }
    },
	"required": [ "getMedicationHistoryRequest" ]
  }
